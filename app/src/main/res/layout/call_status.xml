<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ebf5ff"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/ThemeOverlay.AppCompat.ActionBar" >
        <ImageView
            android:id="@+id/back"
            android:layout_gravity="start"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:scaleType="centerInside"
            android:src="@drawable/back"/>
        <TextView
            android:id="@+id/help"
            android:layout_gravity="end"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginRight="13dp"
            android:drawableLeft="@drawable/help"
            android:gravity="center"
            android:textColor="#4f4f4f"
            android:text="Need Help"
            android:textSize="16sp"
            android:textStyle="bold"
            />
    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/ll1"
        android:layout_width="fill_parent"
        android:layout_height="500dp"
        android:visibility="gone"
        >
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="150dp"
        android:src="@drawable/mobiletower"
        android:layout_weight="1"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="90dp"
        android:src="@drawable/arrow"
        android:layout_weight="1"/>

    <com.skyfishjy.library.RippleBackground
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_weight="1"
        android:layout_width="200dp"
        android:layout_height="500dp"
        android:layout_alignParentRight="true"
        android:id="@+id/content1"
        app:rb_color="#c4d9ed"
        app:rb_radius="18dp"
        app:rb_rippleAmount="4"
        app:rb_duration="3000"
        app:rb_strokeWidth = "10dp"
        app:rb_scale="6">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginLeft="270dp"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_centerInParent="true"
            android:id="@+id/centerImage1"
            android:src="@drawable/profile"/>
    </com.skyfishjy.library.RippleBackground>


    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/ll3"
        android:layout_width="fill_parent"
        android:layout_height="500dp"
        android:visibility="gone"
        >
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="150dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/mobiletower"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginRight="80dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="90dp"
            android:src="@drawable/linearrow"
            android:layout_weight="1"/>

        <com.skyfishjy.library.RippleBackground
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_weight="1"
            android:layout_width="200dp"
            android:layout_height="500dp"
            android:layout_alignParentLeft="true"
            android:id="@+id/content2"
            app:rb_color="#c4d9ed"
            app:rb_radius="18dp"
            app:rb_rippleAmount="4"
            app:rb_duration="3000"
            app:rb_strokeWidth = "10dp"
            app:rb_scale="6">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginLeft="270dp"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_centerInParent="true"
                android:id="@+id/centerImage12"
                android:src="@drawable/layer_1"/>
        </com.skyfishjy.library.RippleBackground>

    </RelativeLayout>




    <RelativeLayout
        android:id="@+id/ll2"
        android:layout_width="wrap_content"
        android:layout_height="500dp"
        >
        <com.skyfishjy.library.RippleBackground
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/content"
            app:rb_color="#c4d9ed"
            app:rb_radius="32dp"
            app:rb_rippleAmount="6"
            app:rb_duration="3000"
            app:rb_scale="6">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_centerInParent="true"
                android:id="@+id/profile"
                android:src="@drawable/profile"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:id="@+id/foundDevice"
                android:layout_above="@id/profile"
                android:layout_marginBottom="32dp"
                android:layout_toLeftOf="@id/profile"
                android:layout_marginRight="6dp"
                android:src="@drawable/layer_1"
                android:visibility="invisible"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:id="@+id/foundDevice1"
                android:layout_above="@id/profile"
                android:layout_marginBottom="32dp"
                android:layout_toRightOf="@id/profile"
                android:layout_marginRight="6dp"
                android:src="@drawable/layer_1"
                android:visibility="invisible"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:id="@+id/foundDevice2"
                android:layout_below="@id/profile"
                android:layout_toLeftOf="@id/profile"
                android:layout_marginTop="32dp"
                android:layout_marginRight="6dp"
                android:src="@drawable/layer_1"
                android:visibility="invisible"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:id="@+id/foundDevice3"
                android:layout_below="@id/profile"
                android:layout_toRightOf="@id/profile"
                android:layout_marginTop="32dp"
                android:layout_marginRight="6dp"
                android:src="@drawable/layer_1"
                android:visibility="invisible"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:id="@+id/foundDevice4"
                android:layout_above="@id/foundDevice3"
                android:layout_toRightOf="@id/profile"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="6dp"
                android:src="@drawable/layer_1"
                android:visibility="invisible"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:id="@+id/foundDevice5"
                android:layout_above="@id/foundDevice2"
                android:layout_toLeftOf="@id/profile"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="32dp"
                android:src="@drawable/layer_1"
                android:visibility="invisible"/>
        </com.skyfishjy.library.RippleBackground>


    </RelativeLayout>

