    <RelativeLayout
        android:id="@+id/relativelayout1"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/call_status_background"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        >
        <ImageView
            android:id="@+id/interpreterstatus"
            android:layout_width="80dp"
            android:layout_height="95dp"
            android:contentDescription="xyz"
            android:layout_alignParentRight="false"
            android:paddingTop="13dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/callwaiting"/>
        <TextView
            android:id="@+id/title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="18dp"
            android:paddingLeft="20.9dp"
            android:textSize="20sp"
            android:textColor="#2e2d3d"
            android:textStyle="bold"
            android:text="Call waiting..."/>
        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_below="@+id/title1"
            android:textSize="14sp"
            android:textColor="#686868"
            android:text="Trying to connect Interpreter"/>

        <TextView
            android:id="@+id/subtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title1"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="60dp"
            android:paddingLeft="20dp"
            android:text="02:00 min"
            android:textSize="14sp"
            android:textColor="#cb3030"
            android:lineSpacingExtra="6sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativelayout2"
        android:layout_width="fill_parent"
        android:layout_height="160dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/call_status_bottom_background"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"

        >
        <ImageView
            android:id="@+id/icon2"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:contentDescription="xyz"
            android:layout_alignParentRight="false"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="18dp"
            android:paddingTop="0dp"
            android:layout_marginRight="9dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:src="@drawable/group_1911"/>
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="72dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="17dp"
            android:paddingLeft="20.9dp"
            android:textSize="15sp"
            android:textColor="#2e2d3d"
            android:lineSpacingExtra="7sp"
            android:textStyle="bold"
            android:text="Namita Shetty"/>
        <TextView
            android:id="@+id/subtitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="38dp"
            android:layout_marginLeft="72dp"
            android:paddingLeft="20.9dp"
            android:layout_below="@+id/title2"
            android:textSize="12sp"
            android:textColor="#707070"
            android:text="Purpose:"/>

        <TextView
            android:id="@+id/purpose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title2"
            android:layout_marginLeft="72dp"
            android:layout_marginTop="38dp"
            android:paddingLeft="70dp"
            android:text="Friends"
            android:textSize="14sp"
            android:textColor="#2e2d3d"
            android:lineSpacingExtra="6sp" />

        <ImageView
            android:id="@+id/icon3"
            android:layout_width="fill_parent"
            android:layout_height="56dp"
            android:contentDescription="xyz"
            android:gravity = "center"
            android:layout_alignParentRight="false"
            android:layout_below="@+id/subtitle21"
            android:layout_marginTop="86dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="38dp"
            android:src="@drawable/calldisconnect"/>
          />
        <TextView
            android:id="@+id/subtitle3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/subtitle21"
            android:layout_marginRight="19dp"
            android:gravity = "right"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="86dp"
            android:paddingLeft="70dp"
            android:text="00:00"
            android:textSize="18sp"
            android:textColor="#132f57"
            android:lineSpacingExtra="2sp" />
