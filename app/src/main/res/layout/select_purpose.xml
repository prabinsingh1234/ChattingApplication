<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:orientation="vertical"
    android:layout_weight="1">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/ThemeOverlay.AppCompat.ActionBar" >
        <ImageView
            android:id="@+id/back"
            android:layout_gravity="start"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:scaleType="centerInside"
            android:src="@drawable/back"/>
        <TextView
            android:id="@+id/help"
            android:layout_gravity="end"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginRight="13dp"
            android:drawableLeft="@drawable/help"
            android:gravity="center"
            android:textColor="#4f4f4f"
            android:text="Need Help"
            android:textSize="16sp"
            android:textStyle="bold"
            />
    </androidx.appcompat.widget.Toolbar>
    <TextView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:gravity="center"
        android:text="Select purpose"
        android:textSize="28sp"
        android:textColor="#2e2d3d"
        android:lineSpacingExtra="2sp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:id="@+id/relativelayout1"
        android:layout_width="fill_parent"
        android:layout_height="105dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"

        >
        <LinearLayout
            android:id="@+id/fmly"
            android:layout_width="96.7dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:background="@drawable/background_border"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/people_2_1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:textSize="13sp"
                android:textColor="#333333"
                android:text="Family"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/frnd"
            android:layout_width="96.7dp"
            android:layout_height="100dp"
            android:layout_marginLeft="18dp"
            android:gravity="center"
            android:background="@drawable/background_border"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/group_1911"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:textSize="13sp"
                android:textColor="#333333"
                android:text="Friends"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/dlvry"
            android:layout_width="96.7dp"
            android:layout_height="100dp"
            android:layout_marginLeft="18dp"
            android:gravity="center"
            android:background="@drawable/background_border"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/scooter_1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:textSize="13sp"
                android:textColor="#333333"
                android:text="Delivery"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/relativelayout2"
        android:layout_width="fill_parent"
        android:layout_height="105dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"

        >
        <LinearLayout
            android:id="@+id/emp"
            android:layout_width="96.7dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:background="@drawable/background_border"
            android:orientation="vertical"
            android:layout_weight="1">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/group_1912"/>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="22dp"
             android:textSize="13sp"
             android:textColor="#333333"
             android:text="Employment"
             android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/mdcal"
            android:layout_width="96.7dp"
            android:layout_height="100dp"
            android:layout_marginLeft="18dp"
            android:gravity="center"
            android:background="@drawable/background_border"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/group_1909"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:textSize="13sp"
                android:textColor="#333333"
                android:text="Medical"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/police"
            android:layout_width="96.7dp"
            android:layout_height="100dp"
            android:layout_marginLeft="18dp"
            android:gravity="center"
            android:background="@drawable/background_border"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/group_1913"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:textSize="13sp"
                android:textColor="#333333"
                android:text="Police"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="105dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"

        >
        <LinearLayout
            android:id="@+id/govtsrvc"
            android:layout_width="96.7dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:background="@drawable/background_border"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/frame_1785"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:textSize="13sp"
                android:textColor="#333333"
                android:text="Goverment"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:textSize="13sp"
                android:textColor="#333333"
                android:text="Service"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/others"
            android:layout_width="96.7dp"
            android:layout_height="100dp"
            android:layout_marginLeft="18dp"
            android:gravity="center"
            android:background="@drawable/background_border"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:textSize="13sp"
                android:textColor="#333333"
                android:text="Others"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="96.7dp"
            android:layout_height="100dp"
            android:layout_marginLeft="18dp"
            android:gravity="center"
            android:background="@drawable/background_border"
            android:orientation="vertical"
            android:layout_weight="1"
            android:visibility="invisible">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:textSize="13sp"
                android:textColor="#333333"
                android:gravity="center"
               />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="vertical" >

        <Button
            android:id="@+id/next"
            style="?android:attr/buttonStyleSmall"
            android:background="@drawable/roundbutton"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal|center"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"
            android:text="Make call" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_above="@+id/bottom_navigation"
        android:background="#8491a3"></View>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_nav_menu"
        app:itemBackground="@color/white"

        app:itemIconTint="@drawable/bottom_nav_color"
        />
</LinearLayout>
</ScrollView>